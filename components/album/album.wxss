.album {
  display: flex;
  flex-direction: column;
  width: 350rpx;
  height: 450rpx;
  /* border: 1px solid lightgray; */
  margin: 10rpx 10rpx 30rpx 10rpx;
}

.album_photo {
  width: 350rpx;
  height: 350rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-evenly;
  align-items: center;
}

.album .img {
  width: 170rpx;
  height: 170rpx;
  border: 1px solid lightgray;
}

.img-lt {
  border-top-left-radius: 20rpx;
}

.img-rt {
  border-top-right-radius: 20rpx;
}

.img-lb {
  border-bottom-left-radius: 20rpx;
}

.img-rb {
  border-bottom-right-radius: 20rpx;
}

.album-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-evenly;
}

.info-title {
  font-size: 32rpx;
  font-weight: bold;
}

.info-des {
  font-size: 24rpx;
  color: gray;

  /*强制span不换行*/
  white-space: nowrap;
  overflow: hidden;
  /*超出部分以点号代替*/
  text-overflow: ellipsis;
  display: inline-block;
}