.list {
  display: flex;
  padding: 20rpx;
  justify-content: space-between;
}

.list_half {
  width: 340rpx;
}

.list_half .list_card {
  background-color: #fff;
  border-radius: 20rpx;
  overflow: hidden;
  margin-bottom: 50rpx;
  padding-bottom: 20rpx;
}

.list_half .list_img {
  width: 100%;
  border-radius: 20rpx;
}

.list_half .list_title {
  font-weight: bold;
  font-size: 32rpx;
  margin: 10rpx 0;
}

.list_half .list_detail {
  display: flex;
}

.list_detail .list_info {
  flex: 2;
  /*强制span不换行*/
  white-space: nowrap;
  overflow: hidden;
  /*超出部分以点号代替*/
  text-overflow: ellipsis;
  display: inline-block;
  width: 200rpx;
  font-size: 24rpx;
  color: lightgray;
}

.list_detail .list_num {
  flex: 1;
  font-size: 24rpx;
  color: lightgray;
  text-align: right;
}

.list_num .iconfont {
  font-size: 22rpx;
  margin-right: 6rpx;
}