/* pages/start/start.wxss */
#start {
  width: 100vw;
  height: 100vh;
}

.bg {
  width: 100%;
  /* height: 812px; */
  height: 100%;

}

.content {
  width: 100%;
  height: 100%;
  position: fixed;
  left: 0;
  right: 0;
  top: 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.content view {
  color: white;
  text-align: center;
  margin-bottom: 100rpx;
}

.content .start_camera {
  font-size: 100rpx;
}

.content .start_go_box{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background-color: red;
}
.content .start_go_box .start_go_icon{
  font-size: 60rpx;
  line-height: 100rpx;
}