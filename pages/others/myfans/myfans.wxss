.myfans {
  width: 100vw;
  height: 100vh;
}

.top {
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  background-color: lightgray;
  font-weight: bold;
  display: flex;
  justify-content: space-between;
}

.top text {
  text-align: center;
  display: block;
  width: 100rpx;
  height: 100rpx;
  font-size: 40rpx;
  margin-right: 20rpx;
}

.top view {
  font-size: 32rpx;
  margin-right: 20rpx;
}

.scroll-myfans {
  width: 100%;
  height: calc(100% - 100rpx);
}