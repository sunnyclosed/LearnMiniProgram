/* pages/detail/detail.wxss */
.detail {
  width: 100vw;
  height: 100vh;
  overflow: hidden;
}

.detail .bg {
  position: fixed;
  z-index: -1;
  width: 100%;
  height: 100%;
}

.detail_info {
  position: fixed;
  left: 0;
  right: 0;
  bottom: -2000rpx;
  background-color: white;
  height: 75%;
  border-top-left-radius: 30rpx;
  border-top-right-radius: 30rpx;
  padding: 0 40rpx 20rpx 40rpx;
  border: 1px solid lightgray;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.detail_info_btn_box {
  text-align: center;
  line-height: 60rpx;
  /* font-weight: bold; */
}

.info_author {
  display: flex;
  margin: 20rpx 0 20rpx 0;
}

.info_author image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin: 20rpx 20rpx 20rpx 0;
}

.info_author text {
  text-align: left;
  line-height: 140rpx;
  font-weight: bold;
  font-size: 32rpx;
  flex: 1;
}

.info_author button {
  width: 140rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 20rpx;
  border-radius: 60rpx;
  margin: 40rpx 0 40rpx 0;
  background-color: #F2F2F2;
  border: 1px solid lightgray;
}

.info_title {
  font-weight: bold;
  font-size: 40rpx;
  margin: 0 0 20rpx 0;
}

.info_scroll {
  flex: 1;
  border: 1px solid lightgray;
}

.scroll_content {
  line-height: 50rpx;
  font-size: 30rpx;
  font-weight: 500;
}

.info_other {
  display: flex;
  justify-content: space-between;
  margin: 30rpx 0;
  font-size: 24rpx;
  font-weight: bold;
}

.other_icon {
  margin-right: 20rpx;
}

.info_dl {
  display: flex;
}

.info_dl .icon_box {
  width: 150rpx;
  background-color: gray;
  height: 100rpx;
  border-top-left-radius: 100rpx;
  border-bottom-left-radius: 100rpx;
  border-right: 2px solid #494949;
}

.icon_box .info_dl_icon {
  position: relative;
  left: 68rpx;
  top: 24rpx;
  font-weight: bold;
  color: white;
  font-size: 46rpx;
}

.info_dl .dl_btn {
  flex: 1;
  background-color: black;
  height: 100rpx;
  border-top-right-radius: 100rpx;
  border-bottom-right-radius: 100rpx;
  color: white;
  font-weight: bold;
  line-height: 100rpx;
  text-align: center;
}