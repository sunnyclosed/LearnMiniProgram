.map-container {
  width: 100vw;
  height: 100vh;
  background-color: lightgreen;
}

.my-map {
  width: 100%;
  height: calc(100% - 300rpx);
}

.button-list {
  width: 100%;
  height: 300rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-evenly;
}

.btn {
  height: 100rpx;
  width: 60%;
  line-height: 100rpx;
  background-color: orangered;
  border-radius: 30rpx;
  color: white;
  font-weight: bold;
  font-size: 30rpx;
}