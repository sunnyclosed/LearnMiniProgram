/* pages/home/home.wxss */
.search_bar {
  display: flex;
  margin: 30rpx 0;
  padding: 0 20rpx;
}

.search_inputbox {
  flex: 1;
  position: relative;
}

.search_inputbox input {
  height: 60rpx;
  border-radius: 80rpx;
  font-size: 30rpx;
  background-color: #F4F4F4;
  padding: 10rpx 50rpx 10rpx 70rpx;
  margin-right: 20rpx;
}

.search_inputbox .search_icon {
  position: absolute;
  font-size: 36rpx;
  top: 24rpx;
  left: 20rpx;
  z-index: 1;
  font-size: 36rpx;
}

.search_bar .search_phone {
  display: inline-block;
  width: 60rpx;
  text-align: right;
  font-weight: bold;
  font-size: 40rpx;
  line-height: 80rpx;
}

.list_scroll {
  height: calc(100vh - 140rpx);
}

.list {
  display: flex;
  padding: 20rpx;
  justify-content: space-between;
}

.list_half {
  width: 340rpx;
}

.list_half .list_card {
  background-color: #fff;
  border-radius: 20rpx;
  overflow: hidden;
  margin-bottom: 50rpx;
  padding-bottom: 20rpx;
}

.list_half .list_img {
  width: 100%;
  border-radius: 20rpx;
}

.list_half .list_title {
  font-weight: bold;
  font-size: 32rpx;
  margin: 10rpx 0;
}

.list_half .list_detail {
  display: flex;
}

.list_detail .list_info {
  flex: 2;
  /*强制span不换行*/
  white-space: nowrap;
  overflow: hidden;
  /*超出部分以点号代替*/
  text-overflow: ellipsis;
  display: inline-block;
  width: 200rpx;
  font-size: 24rpx;
  color: lightgray;
}

.list_detail .list_num {
  flex: 1;
  font-size: 24rpx;
  color: lightgray;
  text-align: right;
}

.list_num .iconfont {
  font-size: 22rpx;
  margin-right: 6rpx;
}