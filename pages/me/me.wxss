/* pages/me/me.wxss */
#me {
  width: 100vw;
  height: 100vh;
  display: flex;
  flex-direction: column;
}

.scroll_me {
  width: 100%;
  height: calc(100% - 300rpx);
  /* flex: 1; */
}

.center {
  height: 300rpx;
  padding: 0 30rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-evenly;
}

.center-othericon {
  display: flex;
  justify-content: space-between;
}

.center-othericon view {
  width: 160rpx;
  height: 60rpx;
  background-color: black;
  color: white;
  font-weight: bold;
  text-align: center;
  font-size: 28rpx;
  line-height: 60rpx;
  border-radius: 40rpx;
}

.center-othericon text {
  background-color: lightgray;
  font-size: 60rpx;
  border-radius: 50%;
  color: gray;
}

.bottom {
  width: 100%;
  /* height: 600rpx; */
  display: flex;
  flex-direction: row;
  /* 允许换行 */
  flex-wrap: wrap;
}